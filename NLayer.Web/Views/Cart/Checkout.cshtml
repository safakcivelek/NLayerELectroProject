@using NLayer.Core.Entities.Concert;
@model ShippingDetails
@{
    ViewData["Title"] = "Checkout";
}
<!-- Shiping Details -->
<div class="container" style="margin-top:20px;">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="shiping-details">
            <div class="section-title">
                <h3 class="text-center">SİPARİŞ BİLGİLERİNİZ</h3>
            </div>
            <p>Lütfen sipariş bilgilerinizi doldurunuz.</p>
            @if (ViewData["Message"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    Sepetinizde ürün bulunmamaktadır.
                </div>
            }
            
            <form asp-controller="Cart" asp-action="Checkout" method="post">
                
                <div class="form-group">
                    <input class="input" type="text" placeholder="Ad Soyad ..." asp-for="UserName">
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
                <div class="form-group">
                    <input class="input" type="text" placeholder="Adres Tanımı ..." asp-for="AddressTitle">
                    <span class="text-danger" asp-validation-for="AddressTitle"></span>
                </div>
                <div class="form-group">
                    <input class="input" type="text" placeholder="Adres ..." asp-for="Address">
                    <span class="text-danger" asp-validation-for="Address"></span>
                </div>
                <div class="form-group">
                    <input class="input" type="text" placeholder="Ülke ..." asp-for="Country">
                    <span class="text-danger" asp-validation-for="Country"></span>
                </div>
                <div class="form-group">
                    <input class="input" type="text" placeholder="Şehir ..." asp-for="City">
                    <span class="text-danger" asp-validation-for="City"></span>
                </div>
                <div class="form-group">
                    <input class="input" type="text" placeholder="Semt ..." asp-for="District">
                    <span class="text-danger" asp-validation-for="District"></span>
                </div>
                <div class="form-group">
                    <input class="input" type="text" placeholder="Posta Kodu ..." asp-for="PostalCode">
                    <span class="text-danger" asp-validation-for="PostalCode"></span>
                </div>
                <div class="form-group">
                    <input class="input" type="text" placeholder="Açıklama ..." asp-for="Description">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="form-group  text-center">
                    <button type="submit" class="btn btn-success btn-block"><i class="fa fa-check"></i> Ödeme Yap</button>
                </div>
            </form>

        </div>
    </div>
    <div class="col-md-2"></div>
</div>
<!-- /Shiping Details -->
