@using NLayer.Web.Models.Order;
@model OrderDetailsListViewModel
@{
    ViewData["Title"] = "OrderDetail";
}
<div class="container">

    <!-- SECTİON1 -->
    <div class="container" style="margin-top:40px;">
        <div class="col-md-12 text-center" style="border-radius:6px;border:solid 1px #e6e6e6;padding:20px 0px;height:70px;">
            <div class="col-md-3 text-left">
                <strong style="font-family:'source_sans_prosemibold';font-size:24px;">Sipariş Detayı</strong>
            </div>
            <div class="col-md-9">
                <div class="col-md-3">
                    <strong>Sipariş Tarihi</strong>
                    <p>@Model.CreatedDate</p>
                </div>
                <div class="col-md-2">
                    <strong>Sipariş No</strong>
                    <p>@Model.OrderNumber</p>
                </div>
                <div class="col-md-2">
                    <strong>Sipariş Özeti</strong>
                    <p>@(Model.OrderDetailsViewModels.Count) Ürün</p>
                </div>

                <div class="text-right">

                    @if (Model.Status == 0)
                    {
                        <p style="color:red;">Sipariş Alındı, Onay Bekleniyor...</p>
                    }
                    else
                    {
                        <strong style="color:#0bc15c;"><i class="fa fa-check" aria-hidden="true"></i> Sipariş Onaylandı</strong>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- /SECTİON1 -->
    <!-- SECTİON2 -->
    <div class="container" style="margin-top:10px;">
        @foreach (var item in Model.OrderDetailsViewModels)
        {
            <div class="col-md-12 text-center" style="margin-top:20px;border-radius:6px;border:solid 1px #e6e6e6;padding:0px;height:150px;">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th class="text-center">Resim</th>
                            <th class="text-center">Ürün Adı</th>
                            <th class="text-center">Fiyat</th>
                            <th class="text-center">Adet</th>
                            <th class="text-center">Ara Toplam</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><img src="~/img/@item.ImageUrl" style="width:100px;" /></td>
                            <td>@item.ProductName</td>
                            <td>@item.Price.ToString("C2")</td>
                            <td>@item.Quantity</td>
                            <td>@item.SubTotal.ToString("C2")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
    </div>

    <div>
    </div>
    <!-- /SECTİON2 -->
    <!-- SECTİON3 -->
    <div class="container" style="margin-top:20px; ">

        <div class="col-md-6" style="border-radius:3px;border:solid 1px #e6e6e6;">
            <strong style="font-family:'source_sans_prosemibold';font-size:20px;">Adres Bilgileri</strong>
            <hr />
            <strong>Tesilmat Adresi</strong>
            <br />
            <strong>@Model.AddressTitle</strong>
            <p>@Model.UserName</p>
            <p>@Model.Address</p>
            <p>@Model.District/@Model.City/@Model.Country</p>
            <br />
            <strong>Fatura Adresi</strong>
            <br />
            <strong>@Model.AddressTitle</strong>
            <p>@Model.UserName</p>
            <p>@Model.Address</p>
            <p>@Model.District/@Model.City/@Model.Country</p>
        </div>
        <div class="col-md-6" style="border-radius:3px;border:solid 1px #e6e6e6;">
            <strong class="" style="font-family:'source_sans_prosemibold';font-size:20px;">Ödeme Bilgileri</strong>

            <table class="table table-hover" style="margin-top:20px;">
                <tbody>
                    <tr>
                        <th>Ürün Toplamı</th>
                        <td class="text-right">@Model.Total.ToString("C2")</td>
                    </tr>
                    <tr>
                        <th>Kargo Tutarı</th>
                        <td class="text-right">₺0,00</td>
                    </tr>
                    <tr>
                        <th>Ödeme Türü</th>
                        <td class="text-right">Kredi Kartı</td>
                    </tr>
                    <tr>
                        <th>Taksit</th>
                        <td class="text-right">+6 Taksit</td>
                    </tr>
                    <tr>
                        <th>TOPLAM</th>
                        <td class="text-right" style="color:red;font-size:20px;">@Model.Total.ToString("C2")</td>
                    </tr>
                    
                </tbody>
            </table>
        </div>
        <a class="btn btn-primary" style="margin-top:60px;margin-left:40px; width:45%;" asp-controller="Home" asp-action="Index"><i class="fa fa-arrow-left" aria-hidden="true"></i> Alişverişe Devam Et</a>
    </div>
    
    <!-- /SECTİON3 -->

</div>

<div style="margin-bottom:100px;"></div>