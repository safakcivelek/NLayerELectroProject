            <div class="col-md-4 col-xs-6">
                <div class="section-title">
                    <h4 class="title">trend ürünler</h4>
                    <div class="section-nav">
                        <div id="slick-nav-3" class="products-slick-nav"></div>
                    </div>
                </div>
                <div class="products-widget-slick" data-nav="#slick-nav-3">
                    <div>
                        @foreach (var item in Model.TrendProducts.Products.Take(4))
                        {
                            <!-- product widget -->
                            <div class="product-widget">
                                <div class="product-img">
                                    <img src="~/img/@item.ImageUrl" alt="">
                                </div>
                                <div class="product-body">
                                    <p class="product-category">@item.Category.Name <b style="color:#337ab7;">( Yıldız Puanı  @item.StarGivenUserCount )</b></p>
                                    <h3 class="product-name">
                                        <a asp-controller="Product" asp-action="Detail" asp-route-productId="@item.Id">
                                            @(item.Name.Length > 18
                                                ? item.Name.Substring(0, 18) + "..."
                                                : item.Name) 
                                        </a>
                                    </h3>
                                    <h4 class="product-price">
                                        @if (item.IsDiscounted)
                                        {
                                            @((item.Price - (item.Price * (Convert.ToDecimal(item.Discount)))).ToString("C2"))
                                           <del class="product-old-price">@item.Price.ToString("C2")</del>
                                        }
                                        else
                                        {
                                            @item.Price.ToString("C2")
                                        }
                                    </h4>
                                </div>
                            </div>
                            <!-- /product widget -->
                        }
