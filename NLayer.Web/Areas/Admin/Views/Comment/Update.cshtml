@using NLayer.Web.Areas.Admin.Models;
@model CommentUpdateViewModel
@{
    ViewData["Title"] = "Yorum Düzenle";
}
@if (ViewData["Message"] != null)
{
    <div class="alert alert-success mt-4" role="alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <center><span class="fas fa-check fa-lg" style="color:green;"></span> @ViewData["Message"]</center>
    </div>
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-5 rounded-lg mt-4">
                <div class="card-header"><h3 class="text-center font-weight-light my-4"><span class="fas fa-edit" style="color:#007bff; "></span> Yorum Düzenle</h3></div>
                <div class="card-body">
                    <form asp-area="Admin" asp-controller="Comment" asp-action="Update" enctype="multipart/form-data">
                        <input type="hidden" asp-for="CommentUpdateDto.Id" />
                        <input type="hidden" asp-for="CommentUpdateDto.ProductId" />

                        <div class="form-group col-md-12">
                            <label asp-for="CommentUpdateDto.Text"></label>
                            <textarea class="form-control" asp-for="CommentUpdateDto.Text" placeholder="Lütfen, hakkında bilgisi giriniz." rows="4"></textarea>
                            <span class="text-danger" asp-validation-for="CommentUpdateDto.Text"></span>
                        </div>

                        <div class="form-row">
                            <div class="col-md-3"></div>
                            <div class="form-group form-check col-md-3">
                                <input asp-for="CommentUpdateDto.IsActive" type="checkbox" />
                                <label asp-for="CommentUpdateDto.IsActive">@(Model.CommentUpdateDto.IsActive ? "Onayı Kaldır!" : "Onayla!")</label>
                                <span class="text-danger" asp-validation-for="CommentUpdateDto.IsActive"></span>
                            </div>
                            
                            <div class="form-group form-check col-md-3">
                                <input asp-for="CommentUpdateDto.IsDeleted" type="checkbox" />
                                <label asp-for="CommentUpdateDto.IsDeleted"></label>
                                <span class="text-danger" asp-validation-for="CommentUpdateDto.IsDeleted"></span>
                            </div>
                            <div class="col-md-3"></div>
                        </div>
                        <hr />
                        <div class="small">
                            <button class="btn btn-primary btn-block"><span class="fas fa-save"></span> Kaydet</button>
                            <a class="btn btn-danger btn-block" asp-area="Admin" asp-controller="Comment" asp-action="Update" asp-route-commentId="@Model.CommentUpdateDto.Id"><span class="fas fa-times"></span> İptal Et</a>
                        </div>
                    </form>                  
                </div>
                <div class="card-footer text-center">
                    <div>
                        <a asp-area="Admin" asp-controller="Comment" asp-action="Index"><span class="fas fa-list-ul"></span> <span>Yorum listesine geri dön!</span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

