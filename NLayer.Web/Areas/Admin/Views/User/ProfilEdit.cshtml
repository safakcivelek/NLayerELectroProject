@using NLayer.Core.DTOs.Concert;
@using NLayer.Core.Entities.Concert;
@model UserUpdateDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Profil Düzenle";
}
@if (ViewData["MessageSuccess"] != null)
{
    <div class="alert alert-success mt-4" role="alert">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <center><span class="fas fa-check fa-lg" style="color:green;"></span> @ViewData["MessageSuccess"]</center>
    </div>
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-5 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4"><span class="fas fa-edit"></span> Profil Düzenle</h3></div>
                <div class="card-body">

                    <form asp-controller="User" asp-action="ProfilEdit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="UserName" class="mb-1 ml-1"></label>
                                <input asp-for="UserName" class="form-control" placeholder="Lütfen, kullanıcı adı giriniz." />
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Email" class="mb-1 ml-1"></label>
                                <input type="email" asp-for="Email" class="form-control" placeholder="Lütfen, e-posta adresi giriniz." />
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>

                            <div class="form-group col-md-6">
                                <label asp-for="FirstName"></label>
                                <input type="text" class="form-control" asp-for="FirstName" placeholder="Lütfen, ad giriniz." />
                                <span class="text-danger" asp-validation-for="FirstName"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="LastName"></label>
                                <input type="text" class="form-control" asp-for="LastName" placeholder="Lütfen, soyad giriniz." />
                                <span class="text-danger" asp-validation-for="LastName"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="PhoneNumber"></label>
                                <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Lütfen, telefon numarası giriniz." />
                                <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="WebsiteLink"></label>
                                <input type="text" class="form-control" asp-for="WebsiteLink" placeholder="Lütfen, website link'i giriniz." />
                                <span class="text-danger" asp-validation-for="WebsiteLink"></span>
                            </div>
                            <div class="form-group col-md-12">
                                <label asp-for="About"></label>
                                <textarea class="form-control" asp-for="About" placeholder="Lütfen, hakkında bilgisi giriniz." rows="4"></textarea>
                                <span class="text-danger" asp-validation-for="About"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="TwitterLink"></label>
                                <input type="text" class="form-control" asp-for="TwitterLink" placeholder="Lütfen, twitter profil link'i giriniz." />
                                <span class="text-danger" asp-validation-for="TwitterLink"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="FacebookLink"></label>
                                <input type="text" class="form-control" asp-for="FacebookLink" placeholder="Lütfen, facebook profil link'i giriniz." />
                                <span class="text-danger" asp-validation-for="FacebookLink"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="InstagramLink"></label>
                                <input type="text" class="form-control" asp-for="InstagramLink" placeholder="Lütfen, instagram profil link'i giriniz." />
                                <span class="text-danger" asp-validation-for="InstagramLink"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="LinkedInLink"></label>
                                <input type="text" class="form-control" asp-for="LinkedInLink" placeholder="Lütfen, linkedin profil link'i giriniz." />
                                <span class="text-danger" asp-validation-for="LinkedInLink"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="YoutubeLink"></label>
                                <input type="text" class="form-control" asp-for="YoutubeLink" placeholder="Lütfen, youtube profil link'i giriniz." />
                                <span class="text-danger" asp-validation-for="YoutubeLink"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="GitHubLink"></label>
                                <input type="text" class="form-control" asp-for="GitHubLink" placeholder="Lütfen, github profil link'i giriniz." />
                                <span class="text-danger" asp-validation-for="GitHubLink"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Picture" class="mb-1 ml-1"></label>
                                <input type="hidden" asp-for="Picture" />
                                <img class="my-image" src="~/img/@Model.Picture" alt="@Model.UserName" />
                            </div>
                            <div class="form-group">
                                <label asp-for="PictureFile" class="mb-1 ml-1"></label>
                                <input type="file" accept="image/*" asp-for="PictureFile" class="form-control-file" placeholder="Lütfen, resim seçiniz." />
                                <span class="text-danger" asp-validation-for="PictureFile"></span>
                            </div>
                        </div>
                            <hr />
                            <div class="small">
                                <button class="btn btn-primary btn-block"><span class="fas fa-save"></span> Kaydet</button>
                                <a class="btn btn-danger btn-block" asp-area="Admin" asp-controller="User" asp-action="ProfilEdit" asp-route-userId="@Model.Id"><span class="fas fa-times"></span> İptal Et</a>
                            </div>
                        
                    </form>

                </div>
                <div class="card-footer text-center">
                    <div>
                        <a asp-area="Admin" asp-controller="User" asp-action="Index"><span class="fas fa-list-ul"></span> <span>Kullanıcı listesine geri dön!</span></a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>